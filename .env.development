# Server Configuration
CONVEYOR_PORT=8080
CONVEYOR_HOST=0.0.0.0
CONVEYOR_LOG_LEVEL=debug

# Data Storage
CONVEYOR_DATA_DIR=./data
CONVEYOR_PLUGINS_DIR=./plugins

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
CONVEYOR_JWT_SECRET=your-development-secret-key
CONVEYOR_JWT_EXPIRY=24h

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# Development Settings
SKIP_AUTH=true
ENABLE_CORS=true
ENABLE_DEBUG_ENDPOINTS=true 